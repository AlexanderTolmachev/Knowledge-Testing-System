<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">

    <servlet>
        <servlet-name>Authentication Servlet</servlet-name>
        <servlet-class>ru.spbstu.appmaths.knowledgetesting.servlets.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication Servlet</servlet-name>
        <url-pattern>/authentication/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration Servlet</servlet-name>
        <servlet-class>ru.spbstu.appmaths.knowledgetesting.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration Servlet</servlet-name>
        <url-pattern>/registration/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout Servlet</servlet-name>
        <servlet-class>ru.spbstu.appmaths.knowledgetesting.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout Servlet</servlet-name>
        <url-pattern>/logout/*</url-pattern>
    </servlet-mapping>

</web-app>